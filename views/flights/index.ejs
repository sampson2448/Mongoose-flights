<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Depart Date</th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <%# Write the line of EJS to iterate over movies using forEach %>
      <% flights.forEach((flight) => { %>

        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightno %></td>
          <td><%= flight.depart %></td>
         <td> <a href="/flights/<%= flight._id %>">DETAILS</a></td>
         <td>
          <form 
          action="/flights/<%= flight._id %>?_method=DELETE" 
          method="POST"
        >
          <button type="submit">X</button>
          </form>
         </td>
        </tr>
      <% })  %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>