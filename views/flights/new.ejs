<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input">
    <label for="airport-select">Airport</label>
    <select name="airport" id="airport-select">
      <option value="AUS">AUS</option>
      <option value="DFW" selected>DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>    
    <label for="flightno-input">Flight Number:</label>
    <input type="number" min="10" max="9999" name="flightno" id="flightno-input">
    <label for="depart-input">date:</label>
    <input type="date" name="depart" id="depart-input">
    <button type="submit">Add Flight</button>
  </form>
</main>
<%- include("../partials/footer") %>
